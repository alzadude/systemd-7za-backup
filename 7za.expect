#!/usr/bin/expect -f

set timeout -1
set fp [open "[lindex $argv 0]" r]
set password [read $fp]
set send_slow {1 .01}

spawn 7za {*}[lrange $argv 1 end]

expect {
  "Enter password (will not be echoed) :" {
    send -s -- "$password\r"
    exp_continue
  }
  "Verify password (will not be echoed) :" {
    send -s -- "$password\r"
  }
}

expect eof
close $fp
